{
  "compilerOptions": {
    "removeComments": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "declaration": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    /* Strict Type-Checking Options */
    "strict": true,
    /* Enable all strict type-checking options. */

    "types": [
      "node",
      "express",
      "fs-extra",
      "lodash"
    ]
  },
  "lib": [
    "es2016"
  ],
  "files": [
    "./global.d.ts",
    "./types/index.d.ts",
    "./types/node.d.ts",
    "./types/helpers.d.ts",
    "./types/http.d.ts",
    "./types/modules.d.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
