{
  "compilerOptions": {
    "removeComments": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "declaration": true,
//    "declarationDir": "decs",
    "downlevelIteration": true,
    "skipLibCheck": false,

    /* Strict Type-Checking Options */
    "strict": true,
    /* Enable all strict type-checking options. */

    "types": [
      "node",
      "express",
      "fs-extra",
      "lodash"
    ]
  },
  "lib": [
    "es2016"
  ],
  "files": [
    "./types/index.d.ts",
    "./types/node.d.ts",
    "./types/helpers.d.ts",
    "./types/http.d.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "dist",
  ]
}
